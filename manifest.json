{
  "manifest_version": 3,
  "name": "StyleSmart",
  "description": "Streamline your online fashion shopping by finding similar products and coupons effortlessly.",
  "version": "1.0",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
},
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icons/icon16.png",
    "default_title": "StyleSmart"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
"host_permissions": [
"https://*ajio.com/*",
"https://*.amazon.com/*",
"https://*.amazon.in/*",
"https://*.snapdeal.com/*"

],
"content_scripts": [
{
  "matches": [
    "https://*ajio.com/*",
    "https://*.amazon.com/*",
    "https://*.amazon.in/*",
    "https://*.snapdeal.com/*"
  ],
  "js": [
    "src/content/productDetector.js",
    "src/content/content.js"
  ]
}
],
  "background": {
    "service_worker": "src/background/background.js"
  }
}